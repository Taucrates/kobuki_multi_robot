<launch>
	<!-- Arguments -->
	<arg name="robot_name" default="kobuki"/>
	<arg name="kobuki_id" default="0"/>
	<arg name="mission_label" default="default"/>

	<!-- world to map TF -->
	<!--<node pkg="tf" type="static_transform_publisher" name="world_to_$(arg robot_name)_map" args="0.0 2.4 0.0 0.0 0.0 0.0 /world /$(arg robot_name)/map 1"/>-->
	
	<!-- Gmapping (if a map has not been created yet) ([!] COMMNET AMCL launch on kobuki_navigation.launch or run only velocity_smoother.launch)--> 
 	<group ns="$(arg robot_name)">
		<node pkg="gmapping" type="slam_gmapping" name="gmapping" output="log" >
				<remap from="scan" to="/$(arg robot_name)/scan"/>
				<param name="odom_frame" value="$(arg robot_name)/odom"/>
				<param name="map_frame" value="$(arg robot_name)/map"/>
				<param name="base_frame" value="$(arg robot_name)/base_footprint"/>
				<param name="map_update_interval" value="0.2"/>
				<param name="temporalUpdate" value="0.2"/>
				<param name="xmin" value="-10"/>
				<param name="xmax" value="10"/>
				<param name="ymin" value="-10"/>
				<param name="ymax" value="10"/>
				<param name="linearUpdate" value="0.2"/>
				<param name="angularUpdate" value="0.25"/>
				<param name="occ_thresh" value="0.05"/>
		</node>
	</group>	
	
	<!-- Kobuki move_base-->
	<include file="$(find kobuki_multi_robot)/launch/navigation_gmapping/move_base_gmapping.launch" >
		<arg name="robot_name" value="$(arg robot_name)"/>
	</include>

	<!-- Velocitiy smoother -->
	<include file="$(find kobuki_multi_robot)/launch/velocity_smoother.launch">
		<arg name="robot_name" value="$(arg robot_name)"/>
	</include>

	<!-- Global goal listener. [!] If launched then UNCOMMNET global goals publisher launch on kobuki_navigation.launch-->
	<include file="$(find kobuki_multi_robot)/launch/multi_robot_slave.launch" >
		<arg name="robot_name" value="$(arg robot_name)"/>
		<arg name="kobuki_id" value="$(arg kobuki_id)"/>
	</include>
</launch>
